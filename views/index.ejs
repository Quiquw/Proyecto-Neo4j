<script>
    function draw() {
      var config = {
        container_id: "viz",
        server_url: "bolt://localhost:7687",
        server_user: "neo4j",
        server_password: "SEAA",
        server_database: "formula1",
        arrows: true,
        hierarchical: true,
        labels: {
          Pilot: {
            caption: "name",
            size: "pagerank",
            community: "community",
            font: {
              size: 16,
              color: "#2503ff"
            }
          },
          Team: {
            caption: "name",
            size: "pagerank",
            community: "community",
            font: {
              size: 16,
              color: "#ff112b"
            }
          },
        },
        relationships: {
          DRIVES_FOR: {
            thickness: "weight",
            caption: true,
          },
          COMPETES_IN: {
            thickness: "weight",
            caption: true,
          },
        },
        initial_cypher: "MATCH n=()-[]->() RETURN n",
      }

      var viz = new NeoVis.default(config);
      viz.render();
    };
    
  </script>

  <body onload="draw()">
    <div id="viz"></div>
  </body>